---
interface Page {
    title: string;
    url: string;
}

const current = Astro.url.pathname;
const pages: Page[] = [
    {
        title: "Home",
        url: "/",
    },
    {
        title: "About",
        url: "/about",
    },
    {
        title: "What I use",
        url: "/uses",
    },
    {
        title: "Now",
        url: "/now",
    },
    {
        title: "Graveyard",
        url: "/graveyard",
    },
];

function linkClasses(page: Page) {
    return `border-b-2 ${
        current === page.url ? "border-b-accent" : "border-transparent"
    }`;
}
---

<header class="flex justify-between py-4">
    <div>Iserila ğŸŒ¸</div>
    <nav class="flex gap-4">
        {
            pages.map((page) => {
                return (
                    <a href={page.url} class={linkClasses(page)}>
                        {page.title}
                    </a>
                );
            })
        }
    </nav>
</header>
