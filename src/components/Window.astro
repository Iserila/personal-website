---
interface Props {
    title?: string;
    width?: 1 | 2 | 3;
}

const { title = "window.exe", width = 1 } = Astro.props as Props;

const spanClass =
    {
        1: "col-span-1",
        2: "col-span-2",
        3: "col-span-3",
    }[width] ?? "col-span-1";
---

<div class={`window ${spanClass}`}>
    <div class="window-titlebar">
        <span class="window-title">{title}</span>
        <div class="window-close">âœ•</div>
    </div>
    <div class="window-content">
        <slot />
    </div>
</div>
