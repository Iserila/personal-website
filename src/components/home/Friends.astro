---
import { Image } from "astro:assets";
import Window from "../Window.astro";

const friends = [
    {
        name: "Bean",
        url: "https://beanrob.com",
        button: "https://beanrob.com/static/button.gif",
    },
    {
        name: "fugastra",
        url: "https://fugastra.github.io",
        button: "https://fugastra.github.io/imgs/button.gif",
    },
];
---

<Window title="friends.exe">
    <h2>Friends</h2>
    <p class="text-sm">It's all about the friends we make along the way ðŸ©·</p>
    <div class="mt-2 flex gap-2 flex-wrap">
        {
            friends
                .filter((x) => x.button !== null)
                .map((friend) => (
                    <a href={friend.url} target="_blank">
                        <Image
                            height={31}
                            width={88}
                            src={friend.button}
                            alt={`Button from ${friend.name}`}
                        />
                    </a>
                ))
        }
    </div>
